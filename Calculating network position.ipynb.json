    "import pandas as pd\n",
    "import networkx as nx\n",
    "import matplotlib.pyplot as plt"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "df = pd.read_csv('/Users/nguyenquangminhnguyet/Documents/Exxonedges-copy_1.csv')"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "graph = nx.from_pandas_edgelist(df, source = 'Vertex 1', target = \n",
    "'Vertex 2', edge_attr = 'Relationship',create_using = nx.DiGraph())\n",
    "plt.figure(figsize = (10,9))\n",
    "nx.draw(graph, node_size=500, node_color='lightgreen',\n",
    "linewidths=0.25, font_size=10, font_weight='bold', with_labels=True, \n",
    "dpi=1000)\n",
    "plt.show()"
   ]
  },
  {
   "cell_type": "code",
